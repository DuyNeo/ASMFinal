@model IEnumerable<asmfinal.Models.Nhanvien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nhân viên</h1>

<p>
    <a  class="btn btn-primary" asp-action="Create">Thêm nhân viên</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Email"  class="btn btn-primary">Sửa nhân viên</a> 
                <a asp-action="Details" asp-route-id="@item.Email"  class="btn btn-primary">Chi tiết nhân viên</a> 
                <a asp-action="Delete" asp-route-id="@item.Email"  class="btn btn-primary">Xóa nhân viên</a>
            </td>
        </tr>
}
    </tbody>
</table>
